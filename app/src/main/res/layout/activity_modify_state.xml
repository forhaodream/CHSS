<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:background="@drawable/icon_modify_state" />
    <TextView
        android:id="@+id/tv_modify_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺信息修改成功"
        android:textColor="#ff333333"
        android:textSize="18dp"
        android:layout_below="@id/img"
        android:layout_marginTop="19dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_countdown"
        android:layout_below="@id/tv_modify_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到首页(5S)"
        android:textColor="#ff666666"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_reason_fail"
        android:layout_below="@id/tv_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:text="失败原因失败原因失败原因失败原因失败原因失败原因失败原因失败原因失败原因"
        android:textColor="#ff333333"
        android:textSize="15dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bottom"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>