<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/color_green_theme">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="店铺信息"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="34dp"
                android:text="基本信息"
                android:textColor="#ff333333"
                android:textSize="19sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="33dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_will_choose" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/shop_name"
                    android:textColor="#ff323232"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginRight="25dp"
                    android:background="@null"
                    android:hint="@string/hint_shop_name"
                    android:maxEms="15"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:textColorHint="@color/color_green_hint"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="25dp"
                android:background="@color/color_green_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="33dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_will_choose" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/shop_owner_name"
                    android:textColor="#ff323232"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_store_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginRight="25dp"
                    android:background="@null"
                    android:hint="@string/hint_shop_owner_name"
                    android:maxEms="10"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColorHint="@color/color_green_hint"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="25dp"
                android:background="@color/color_green_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="33dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_will_choose" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/contact_phone"
                    android:textColor="#ff323232"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_store_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginRight="25dp"
                    android:background="@null"
                    android:hint="@string/login_input_phone_hint"
                    android:maxLength="11"
                    android:phoneNumber="true"
                    android:textColorHint="@color/color_green_hint"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="25dp"
                android:background="@color/color_green_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_will_choose" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/shop_type"
                    android:textColor="#ff323232"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ed_store_type_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/shop_type_hint"
                    android:inputType="none"
                    android:textColorHint="@color/color_green_hint"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_right_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="25dp"
                android:background="@color/color_green_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_will_choose" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="店铺地址"
                    android:textColor="#ff323232"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ed_store_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_51"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="省-市-区/县"
                    android:textColorHint="@color/color_green_hint"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_right_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="25dp"
                android:background="@color/color_green_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_store_detailed_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:hint="请填写门店详细地址"
                    android:maxEms="30"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textColorHint="@color/color_green_hint"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <!--        <com.baidu.mapapi.map.MapView-->
            <!--            android:id="@+id/map"-->
            <!--            android:layout_width="@dimen/dp_210"-->
            <!--            android:layout_height="@dimen/dp_106"-->
            <!--            android:layout_marginLeft="125dp"-->
            <!--            android:layout_marginTop="@dimen/dp_12"/>-->
            <RelativeLayout
                android:layout_width="@dimen/dp_230"
                android:layout_height="@dimen/dp_120"
                android:layout_marginLeft="@dimen/dp_126"
                android:layout_marginTop="@dimen/dp_12">

                <com.baidu.mapapi.map.MapView
                    android:id="@+id/baidu_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_location"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_28"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_btn_white"
                    android:text="编辑定位" />

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_shop" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="25dp"
                android:background="@color/color_green_hint" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="25dp">

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_will_choose" />

                <TextView
                    android:id="@+id/open_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/star"
                    android:text="营业时间"
                    android:textColor="#ff323232"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ed_store_open_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/open_time"
                    android:background="@null"
                    android:text="营业时间"
                    android:textColor="@color/color_green_hint"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/ed_store_open_time"
                    android:text="-" />

                <TextView
                    android:id="@+id/ed_store_close_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/line"
                    android:background="@null"
                    android:text="休息时间"
                    android:textColor="@color/color_green_hint"
                    android:textSize="16dp" />

                <!--                <ImageView-->
                <!--                    android:layout_width="8dp"-->
                <!--                    android:layout_height="14dp"-->
                <!--                    android:layout_alignParentRight="true"-->
                <!--                    android:layout_gravity="center_vertical"-->
                <!--                    android:background="@drawable/icon_right_arrow" />-->
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="25dp"
                android:background="@color/color_green_hint" />


            <Button
                android:id="@+id/btn_next_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_48"
                android:background="@drawable/btn_login_red_theme"
                android:text="下一步"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>