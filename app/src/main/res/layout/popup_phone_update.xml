<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_white">

    <TextView
        android:id="@+id/popup_phone_update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_22"
        android:text="修改手机号"
        android:textColor="#ff323232"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/popup_phone_update_title"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_26"
        android:background="@drawable/shape_rec_corner2_gray"
        android:hint="请输入新手机号"
        android:maxLength="11"
        android:paddingLeft="@dimen/dp_16"
        android:phoneNumber="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update_info"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_weight="1"
            android:background="@drawable/bg_main_btn"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_weight="1"
            android:background="@drawable/bg_dark_gray"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

</RelativeLayout>