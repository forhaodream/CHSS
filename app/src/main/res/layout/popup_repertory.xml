<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_circle_card_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="库存"
            android:textColor="@color/black_3"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/icon_delete" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_26"
                android:text="库存无限"
                android:textColor="#ff323232"
                android:textSize="16sp" />

            <ch.ielse.view.SwitchView
                android:id="@+id/max_switch"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_22"
                app:isOpened="false"
                app:offColor="#A3A3A3"
                app:offColorDark="#A3A3A3"
                app:primaryColor="@color/color_red_theme" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_26"
            android:background="@color/view_line" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_26"
                android:text="库存"
                android:textColor="#ff323232"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/text_repertory_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_140"
                android:background="@android:color/white"
                android:hint="250"
                android:textColor="#ff666666"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_26"
            android:background="@color/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55">

            <TextView
                android:id="@+id/text_repertory_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_26"
                android:text="库存自动补足"
                android:textColor="#ff323232"
                android:textSize="16sp" />

            <ch.ielse.view.SwitchView
                android:id="@+id/auto_switch"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_22"
                app:isOpened="false"
                app:offColor="#A3A3A3"
                app:offColorDark="#A3A3A3"
                app:primaryColor="@color/color_red_theme" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="10dp"
                android:layout_below="@id/text_repertory_auto"
                android:layout_alignLeft="@id/text_repertory_auto"
                android:layout_marginTop="@dimen/dp_5"
                android:text="开启后次日库存自动显示为最大库存数量"
                android:textColor="#ff666666"
                android:textSize="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_26"
            android:background="@color/view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_26"
                android:text="最大库存数"
                android:textColor="#ff323232"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/text_repertory_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_140"
                android:background="@android:color/white"
                android:hint="250"
                android:textColor="#ff666666"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_26"
            android:background="@color/view_line" />
    </LinearLayout>

    <Button
        android:id="@+id/text_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_48"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/bg_login_theme_red"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_15" />
</LinearLayout>