<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/item_right_head"
        android:layout_width="@dimen/dp_86"
        android:layout_height="@dimen/dp_86"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_5"
        android:scaleType="centerCrop"
        android:src="@mipmap/logo_shop" />

    <TextView
        android:id="@+id/item_right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_right_head"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/item_right_head"
        android:ellipsize="end"
        android:maxLength="8"
        android:text="新米溢田黑龙江东……大米2.5kg珍…"
        android:textColor="#ff343434"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_right_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_card_orange"
        android:paddingLeft="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_2"
        android:text="火锅"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/item_right_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_right_title"
        android:layout_alignLeft="@id/item_right_title"
        android:layout_marginTop="@dimen/dp_10"
        android:text="3.5分"
        android:textColor="#ff656565"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/item_right_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_right_title"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@id/item_right_score"
        android:text="月销101"
        android:textColor="#ff666666"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/item_right_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_right_type"
        android:layout_alignRight="@id/item_right_type"
        android:layout_marginTop="@dimen/dp_10"
        android:text="已上架"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_right_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_right_score"
        android:layout_alignStart="@id/item_right_score"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#ff666666"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/item_right_repertory"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/item_right_price"
        android:layout_alignStart="@id/item_right_title"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_gray"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="库存200"
        android:textColor="#ff666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_right_putaway"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_20"
        android:layout_alignTop="@id/item_right_repertory"
        android:layout_alignRight="@id/item_right_type"
        android:background="@drawable/bg_login_red"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="上架"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>