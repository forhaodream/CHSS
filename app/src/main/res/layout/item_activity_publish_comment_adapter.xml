<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_54"
    android:layout_height="@dimen/dp_54">

    <ImageView
        android:id="@+id/iv_item_activity_publishComment_showPic"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:layout_centerInParent="true"
        android:background="@color/color_EDF5F2"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_item_activity_publishComment_deletePic"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_circle_delete_pic" />

    <RelativeLayout
        android:id="@+id/rl_item_activity_publishComment_addPic"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:layout_centerInParent="true"
        android:background="@color/color_EDF5F2"
        android:visibility="visible" />

</RelativeLayout>