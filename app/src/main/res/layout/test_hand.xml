<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ver="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.cirno_poi.verifyedittextlibrary.VerifyEditText
        android:id="@+id/vet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:cursorDrawable="@color/white"
        app:defaultColor="#808080"
        app:focusColor="@color/color_green_theme"
        app:inputCount="8"
        app:mTextSize="@dimen/sp_12"
        app:underlineHeight="@dimen/dp_2" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>